<Window x:Class="BuildingMap.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:components="clr-namespace:BuildingMap.UI.Components"
        xmlns:local="clr-namespace:BuildingMap.UI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Viewbox Stretch="UniformToFill">
            <components:MainFieldGrid Height="1000" Width="1000">
                <components:BuildingGrid ShowGrid="True" GridSize="10" GridZoom="7">
                    <components:VertexView HorizontalAlignment="Right" Margin="0,0,585,436" VerticalAlignment="Bottom" />
                </components:BuildingGrid>
            </components:MainFieldGrid>
        </Viewbox>
    </Grid>
</Window>
